<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appoidochef">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="AppOidoChef"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:networkSecurityConfig="@xml/network">

        <!-- Actividades -->
        <activity android:name=".ui.main.PedidoExistenteActivity" />
        <activity android:name=".util.CarritoActivity" />
        <activity android:name=".ui.main.ResumenPedidoActivity" />
        <activity android:name=".ui.main.ProductoActivity" />
        <activity android:name=".ui.main.MainActivity" />

        <activity
            android:name=".ui.main.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- âœ… Servicio en primer plano para WebSocket -->
        <service
            android:name=".data.websocket.WebSocketListenerService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>
</manifest>
