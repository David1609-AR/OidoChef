<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_retro"
        android:contentDescription="@null" />

    <!-- Capa oscura semitransparente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesa"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Categorías (vertical) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- Productos (ocupa el resto del espacio) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProductos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnVerPedidosExistentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver pedidos"
                android:background="@drawable/black_btn"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEnviarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar pedido"
                android:background="@drawable/black_btn"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
